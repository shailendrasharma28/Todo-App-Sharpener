{
  // Visit https://aka.ms/tsconfig to read more about this file
  "compilerOptions": {
    // File Layout
    // "rootDir": "./src",
    // "outDir": "./dist",

    // Environment Settings
    // See also https://aka.ms/tsconfig/module
    "module": "none",
    "target": "es6",
    "types": [],
    // For nodejs:
    "lib": ["dom", "es6"],
    // "types": ["node"],
    // and npm install -D @types/node

    // Other Outputs
    "sourceMap": false,
    "declaration": false,

    // Recommended Options
    "strict": true,
    "skipLibCheck": true,
  }
}
